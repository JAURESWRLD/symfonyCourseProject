{% extends 'base.html.twig' %}

{% block title %}{{product.name}} e-commerce{% endblock %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col-sm-5">
      <img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
    </div>
    <div class="col-sm-7 my-auto">
      <h3>{{product.name}}</h3>
      <p class="product-subtitle">{{product.subtitle}}</p>
      <span class="product-page-price">{{(product.price /100)|number_format(2, ',','.' )}}â‚¬</span>
      <hr>
      <p><span>{{product.description}}</span></p>
      <hr>
      <a href="{{path ('add_to_cart', {'id' : product.id} )}}" type="button" class="btn btn-primary">Ajouter au panier</a>
    </div>
  </div>
</div>
{% endblock %}

